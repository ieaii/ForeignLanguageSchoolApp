<Page x:Class="ForeignLanguageSchoolApp.Views.Pages.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ForeignLanguageSchoolApp.Views.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthPage">

    <Grid Style="{StaticResource AuthGrid}">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Авторизация" Style="{StaticResource WhiteHeaderTextBlock}"/>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="Логин" Style="{StaticResource WhiteAuthTextBlock}" />
                <TextBox Style="{StaticResource AuthTextBox}" x:Name="LoginTextBox"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,30">
                <TextBlock Text="Пароль" Style="{StaticResource WhiteAuthTextBlock}" />
                <PasswordBox Style="{StaticResource AuthPasswordBox}" x:Name="PasswordPasswordBox"/>
            </StackPanel>
            <Button Content="Авторизация" Style="{StaticResource AuthButton}" x:Name="AuthButton" Click="AuthButtonClick"/>
        </StackPanel>
    </Grid>
</Page>
